<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <ImageView android:id="@+id/imgPlacePic"

        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"

        android:src="@drawable/ic_launcher_background" />

    <TextView android:id="@+id/lblTitle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toEndOf="@id/imgPlacePic"
        android:layout_alignTop="@id/imgPlacePic"

        android:textSize="20sp"
        android:text="@string/str_titleExample" />

    <TextView android:id="@+id/lblComment"

        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/lblTitle"
        android:layout_toEndOf="@id/imgPlacePic"

        android:text="@string/str_commentExample" />

    <RatingBar android:id="@+id/ratingBar"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_below="@id/lblComment"
        android:layout_toEndOf="@id/imgPlacePic"

        style="?android:attr/ratingBarStyleSmall"

        android:rating="3"
        android:numStars="5"
        android:stepSize="0.5"
        android:isIndicator="true"
        />

    <TextView android:id="@+id/lblDistance"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/ratingBar"

        android:text="@string/str_distanceExample" />
</RelativeLayout>
